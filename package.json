{
  "name": "api-projeto-integrador",
  "version": "1.0.0",
  "description": "API desenvolvida para o projeto DIANPE",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev:server",
    "dev:server": "nodemon",
    "build": "tsup src",
    "start": "node dist/server.js"
  },
  "keywords": [],
  "author": "Diogo Henrique Ferreira",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.6",
    "nodemon": "^3.0.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "tsup": {
    "entry": "src/server.ts",
    "format": [
      "cjs",
      "esm"
    ],
    "sourcemap": true,
    "target": "node18",
    "ignore": [
      "src/types",
      "src/**/*.sqlite",
      "src/**/*.md"
    ],
    "loader": {
      ".html": "text"
    }
  }
}  